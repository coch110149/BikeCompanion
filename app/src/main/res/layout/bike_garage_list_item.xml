<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto"
                                             xmlns:tools = "http://schemas.android.com/tools"
                                             android:layout_width = "match_parent"
                                             android:layout_height = "match_parent"
                                             tools:layout_editor_absoluteX = "0dp"
                                             tools:layout_editor_absoluteY = "25dp">

    <TextView
            android:id = "@+id/bike_name"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginLeft = "8dp"
            android:layout_marginRight = "8dp"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/bike_name"
            app:layout_constraintHorizontal_bias = "0.504"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintRight_toLeftOf = "@+id/bike_distance"
            app:layout_constraintTop_toTopOf = "parent"
            tools:layout_constraintLeft_creator = "1"
            tools:layout_constraintRight_creator = "1" />

    <TextView
            android:id = "@+id/bike_distance"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/bike_distance"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

    <Button
            android:id = "@+id/edit_bike_button"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/edit_bike"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/bike_name" />

    <Button
            android:id = "@+id/view_components"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginStart = "9dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/view_components"
            app:layout_constraintLeft_toRightOf = "@+id/edit_bike_button"
            app:layout_constraintRight_toLeftOf = "@+id/view_ride_button"
            app:layout_constraintTop_toBottomOf = "@+id/bike_name"
            tools:layout_constraintLeft_creator = "1"
            tools:layout_constraintRight_creator = "1" />

    <Button
            android:id = "@+id/view_ride_button"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/view_rides"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/bike_name" />

</android.support.constraint.ConstraintLayout>
